# Environment Configuration Example
# Copy this file to .env for local configuration

# ================================
# API Configuration
# ================================

# Base URL for the API under test
BASE_URL=https://jsonplaceholder.typicode.com

# API timeout in milliseconds
API_TIMEOUT=30000

# ================================
# Test Execution Configuration
# ================================

# Run tests in headless mode (true/false)
HEADLESS=true

# Number of parallel workers (leave empty for default)
WORKERS=4

# Retry failed tests (0 for local, 2 for CI)
RETRIES=0

# ================================
# CI/CD Configuration
# ================================

# Indicates if running in CI environment
CI=false

# ================================
# Reporting Configuration
# ================================

# Generate HTML report (true/false)
HTML_REPORT=true

# Generate JSON report (true/false)
JSON_REPORT=true

# ================================
# Logging Configuration
# ================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable detailed API logging
DEBUG_API=false

# ================================
# Performance Configuration
# ================================

# Maximum acceptable response time (ms)
MAX_RESPONSE_TIME=2000

# Enable performance monitoring
PERFORMANCE_MONITORING=false

# ================================
# Feature Flags
# ================================

# Enable experimental features
EXPERIMENTAL_FEATURES=false

# Enable visual regression testing
VISUAL_TESTING=false

# ================================
# Environment-Specific Settings
# ================================

# Environment name (local, staging, production)
TEST_ENV=local

# ================================
# Notes
# ================================
# 
# - Copy this file to .env to use locally
# - Never commit .env files to version control
# - CI/CD systems should set these via environment variables
# - Boolean values should be 'true' or 'false' (lowercase)
